<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_showInfo"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/view_holder_background">

    <TextView
        android:id="@+id/tv_locateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="단국대학교"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="경기도 용인시 수지구 죽전로 152"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tv_locateName"
        app:layout_constraintTop_toBottomOf="@+id/tv_locateName" />

    <TextView
        android:id="@+id/parkingPriceInfoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TEL:"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/tv_address"
        app:layout_constraintTop_toBottomOf="@+id/tv_address" />

    <TextView
        android:id="@+id/tv_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="031-1899-3700"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/parkingPriceInfoTxt"
        app:layout_constraintStart_toEndOf="@+id/parkingPriceInfoTxt"
        app:layout_constraintTop_toTopOf="@+id/parkingPriceInfoTxt" />

    <ImageView
        android:id="@+id/img_recommend"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_path2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/floating_background" />

    <ImageView
        android:id="@+id/img_path2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_find_path" />

</androidx.constraintlayout.widget.ConstraintLayout>