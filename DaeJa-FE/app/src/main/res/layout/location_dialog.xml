<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/daeja_sub">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/daeja_sub">

        <Button
            android:id="@+id/closeButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="close"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white"
            tools:ignore="MissingConstraints" />

        <!-- 앱 로고 이미지 -->
<!--        <ImageView-->
<!--            android:id="@+id/appLogoImageView"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/icon_daeja2"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/closeButton1"-->
<!--            android:layout_marginTop="20dp"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintBottom_toTopOf="@+id/contactLabel" />-->

        <TextView
            android:id="@+id/contactLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자주 가는 위치 : 단국대학교 소프트웨어관"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/closeButton1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Developer 1 -->
        <TextView
            android:id="@+id/developer1Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자주 가는 주차장 : 단국대학교 소프웨어관 주차장"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/contactLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Developer 2 -->
        <TextView
            android:id="@+id/developer2Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내 집 위치 : 경기도 안양시 만안구 박달동"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/developer1Label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <!-- Developer 3 -->
        <TextView
            android:id="@+id/developer3Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회사 위치 : 단국대학교"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/developer2Label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <!-- Developer 4 -->
        <TextView
            android:id="@+id/developer4Label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="즐겨찾기 1 : "
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/developer3Label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
